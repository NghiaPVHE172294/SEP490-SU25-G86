@page
@model SEP490_SU25_G86_Client.Pages.CarrerHandbook.ListCareerHandbookModel
@{
    ViewData["Title"] = "Danh sách Cẩm nang nghề nghiệp";
}

<div class="container my-4">
    <h3 class="mb-3">Danh sách Cẩm nang nghề nghiệp</h3>
    <a asp-page="/CareerHandbook/CreateCareerHandbook" class="btn btn-success mb-3">+ Thêm mới</a>

    @if (Model.Handbooks != null && Model.Handbooks.Any())
    {
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Tiêu đề</th>
                    <th>Danh mục</th>
                    <th>Ngày tạo</th>
                    <th>Trạng thái</th>
                    <th style="width:150px;">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hb in Model.Handbooks)
                {
                    <tr>
                        <td>@hb.Title</td>
                        <td>@hb.CategoryName</td>
                        <td>@hb.CreatedAt.ToString("dd/MM/yyyy")</td>
                        <td>@(hb.IsPublished ? "Đã xuất bản" : "Nháp")</td>
                        <td>
                            <a asp-page="/CareerHandbook/UpdateCareerHandbook"
                               asp-route-id="@hb.HandbookId"
                               class="btn btn-sm btn-primary">Sửa</a>
                            <form method="post"
                                  asp-page-handler="Delete"
                                  asp-route-id="@hb.HandbookId"
                                  style="display:inline;">
                                <button type="submit"
                                        class="btn btn-sm btn-danger"
                                        onclick="return confirm('Bạn có chắc muốn xóa bài viết này?');">
                                    Xóa
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">Chưa có bài viết nào.</p>
    }
</div>
