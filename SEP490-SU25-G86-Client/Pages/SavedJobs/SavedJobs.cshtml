@page
@model SEP490_SU25_G86_Client.Pages.SavedJobs.SavedJobsModel
@{
    ViewData["Title"] = "Saved Jobs";
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CVMatcher - Việc làm đã lưu</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50 text-gray-800">

    <!-- Header -->
    <header class="bg-black text-white py-4 px-8 flex justify-between items-center">
        <h1 class="text-xl font-semibold">CVMatcher</h1>
        <nav class="space-x-6">
            <a href="#" class="hover:underline">Home</a>
            <a href="#" class="hover:underline">Jobs</a>
            <a href="#" class="hover:underline">About Us</a>
            <a href="#" class="font-bold underline">Contact Us</a>
        </nav>
        <img src="https://via.placeholder.com/40" alt="User Avatar" class="rounded-full w-10 h-10" />
    </header>

    <!-- Main Section -->
    <main class="p-6 grid grid-cols-3 gap-6">
        <!-- Left: Danh sách việc đã lưu -->
        <section class="col-span-2 bg-green-50 p-6 rounded shadow">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-lg font-semibold">Danh sách việc làm đã lưu</h2>
                <select class="border px-3 py-2 rounded">
                    <option>Trạng thái</option>
                    <option>OPEN</option>
                    <option>CLOSED</option>
                </select>
            </div>

            @if (Model.SavedJobs.Any())
            {
                <div class="space-y-4">
                    @foreach (var job in Model.SavedJobs)
                    {
                        <div class="border rounded p-4 bg-white shadow-sm">
                            <div class="flex justify-between items-center mb-2">
                                <h3 class="text-lg font-semibold">@job.Title</h3>
                                <span class="px-2 py-1 rounded text-white text-sm @(job.Status == "OPEN" ? "bg-green-500" : "bg-red-500")">@job.Status</span>
                            </div>
                            <p class="text-sm text-gray-600 mb-1"><strong>Địa điểm:</strong> @job.WorkLocation</p>
                            <p class="text-sm text-gray-600 mb-3"><strong>Saved At:</strong> @(job.SaveAt?.ToString("dd/MM/yyyy") ?? "N/A")</p>
                            <a href="/job/details/@job.JobPostId" class="inline-block px-4 py-2 text-sm bg-blue-500 text-white rounded hover:bg-blue-600">Xem chi tiết</a>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-10 text-gray-600">
                    <p>Bạn chưa lưu công việc nào !</p>
                    <a href="/jobs" class="mt-4 inline-block px-6 py-2 bg-green-600 text-white rounded hover:bg-green-700">Tìm Việc Ngay</a>
                </div>
            }
        </section>

        <!-- Right: Gợi ý việc làm phù hợp -->
        <aside class="bg-white p-4 rounded shadow">
            <h3 class="text-lg font-semibold mb-4">Gợi ý việc làm phù hợp</h3>

            <!-- Placeholder job card -->
            <div class="border rounded p-4 mb-3 flex items-center space-x-4">
                <div class="bg-green-100 text-center p-2 rounded">
                    <p class="text-xs">Tới 30 triệu</p>
                </div>
                <div>
                    <p class="font-semibold">Lập trình viên Server</p>
                    <p class="text-sm text-gray-500">Công ty TNHH Viettaland</p>
                </div>
                <span class="ml-auto text-sm text-gray-500">Hà Nội</span>
            </div>

            <div class="border rounded p-4 mb-3 flex items-center space-x-4">
                <div class="bg-green-100 text-center p-2 rounded">
                    <p class="text-xs">Tới 30 triệu</p>
                </div>
                <div>
                    <p class="font-semibold">Lập trình viên Backend</p>
                    <p class="text-sm text-gray-500">Công ty CP TechViet</p>
                </div>
                <span class="ml-auto text-sm text-gray-500">TP.HCM</span>
            </div>
        </aside>
    </main>

    <!-- Footer -->
    <footer class="bg-black text-white p-8 grid grid-cols-4 gap-8 text-sm">
        <div>
            <h4 class="font-bold mb-2">Job</h4>
            <p>Quis enim pellentesque viverra tellus eget malesuada facilisis. Congue nibh vivamus aliquet nunc mauris d...</p>
        </div>
        <div>
            <h4 class="font-bold mb-2">Company</h4>
            <ul>
                <li>About Us</li>
                <li>Our Team</li>
                <li>Partners</li>
                <li>For Candidates</li>
                <li>For Employers</li>
            </ul>
        </div>
        <div>
            <h4 class="font-bold mb-2">Job Categories</h4>
            <ul>
                <li>Telecommunications</li>
                <li>Hotels & Tourism</li>
                <li>Construction</li>
                <li>Education</li>
                <li>Financial Services</li>
            </ul>
        </div>
        <div>
            <h4 class="font-bold mb-2">Newsletter</h4>
            <p class="mb-2">Eu nunc pretium vitae platea. Non metus elementum vulputate</p>
            <input type="email" placeholder="Email Address" class="w-full px-3 py-2 text-black rounded mb-2" />
            <button class="w-full bg-teal-400 py-2 rounded text-white font-semibold">Subscribe now</button>
        </div>
    </footer>

    <div class="text-center text-xs text-gray-400 py-2">
        © Copyright Job Portal 2024. Designed by Figma.guru |
        <a href="#" class="underline">Privacy Policy</a> |
        <a href="#" class="underline">Terms & Conditions</a>
    </div>
</body>
</html>
