<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin - Account Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #eef7f7; /* màu nền từ ảnh bạn gửi */
            margin: 0;
        }

        .sidebar {
            background-color: #fff;
            border-right: 1px solid #dee2e6;
            min-height: 100vh;
            padding-top: 20px;
        }

            .sidebar .btn {
                background-color: #309689;
                color: white;
            }

                .sidebar .btn.active-btn {
                    background-color: #963330 !important;
                }

        .account-card {
            background-color: #fff;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
        }

        .account-info-inline {
            display: flex;
            gap: 30px;
            font-size: 14px;
            color: #555;
        }

        .role-badge {
            font-size: 0.85rem;
        }

        .search-area input {
            width: 100%;
        }

        .search-label {
            font-weight: 500;
        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar">
                <div class="d-grid gap-2 px-3">
                    <button class="btn active-btn" onclick="activateButton(this)">Account</button>
                    <button class="btn" onclick="activateButton(this)">Dashboard</button>
                    <button class="btn" onclick="activateButton(this)">Notification Management</button>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 p-4">

                <!-- Search -->
                <form method="get" class="row mb-3 align-items-end">
                    <div class="col-md-8">
                        <label class="form-label search-label">Search by Account Name</label>
                        <div class="input-group">
                            <input type="text" name="accountName" class="form-control" placeholder="Enter account name..."
                                   value="@(Request.Query["accountName"])">
                            <button class="btn btn-outline-primary" type="submit">Search</button>
                        </div>
                    </div>
                </form>

                <!-- Filter -->
                <form method="get" id="roleFilterForm" class="d-flex gap-3">
                    <input type="radio" class="btn-check" name="role" id="role-all" value="ALL"
                           onchange="submitRole()" @(Request.Query["role"] == "" || Request.Query["role"] == "ALL" ? "checked" : "")>
                    <label class="btn btn-outline-dark" for="role-all">All</label>

                    <input type="radio" class="btn-check" name="role" id="role-employer" value="EMPLOYER"
                           onchange="submitRole()" @(Request.Query["role"] == "EMPLOYER" ? "checked" : "")>
                    <label class="btn btn-outline-primary" for="role-employer">Employer</label>

                    <input type="radio" class="btn-check" name="role" id="role-candidate" value="CANDIDATE"
                           onchange="submitRole()" @(Request.Query["role"] == "CANDIDATE" ? "checked" : "")>
                    <label class="btn btn-outline-success" for="role-candidate">Candidate</label>
                </form>


                <!-- Account Cards -->
                @foreach (var acc in Model.AccountList)
                {
                    <div class="account-card">
                        <div class="d-flex justify-content-between">
                            <small>@acc.CreatedDate</small>
                            <button class="btn btn-sm btn-outline-secondary">View</button>
                        </div>
                        <h5 class="mt-2 mb-1">
                            @acc.FullName
                            @if (acc.RoleName == "EMPLOYER")
                            {
                                <span class="badge bg-info text-dark role-badge">Employer</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary role-badge">Candidate</span>
                            }
                        </h5>
                        <p class="mb-1">@acc.Email</p>
                        <div class="account-info-inline">
                            <div>@acc.Address</div>
                        </div>
                    </div>
                }

                <!-- Pagination -->
                <nav>
                    <ul class="pagination justify-content-center mt-4">
                        <li class="page-item disabled"><a class="page-link">Prev</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>

            </div>
        </div>
    </div>

    <!-- JS Functions -->
    <script>
        function activateButton(clickedBtn) {
          document.querySelectorAll('.sidebar .btn').forEach(btn => {
            btn.classList.remove('active-btn');
          });
          clickedBtn.classList.add('active-btn');
        }

