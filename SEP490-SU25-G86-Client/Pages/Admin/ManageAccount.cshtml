@model SEP490_SU25_G86_Client.Pages.Admin.ManageAccountModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin - Account Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #eef7f7;
            margin: 0;
        }

        .sidebar {
            background-color: #fff;
            border-right: 1px solid #dee2e6;
            min-height: 100vh;
            padding-top: 20px;
        }

            .sidebar .btn {
                background-color: #309689;
                color: white;
            }

                .sidebar .btn.active-btn {
                    background-color: #963330 !important;
                }

        .account-card {
            background-color: #fff;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
        }

        .account-info-inline {
            display: flex;
            gap: 30px;
            font-size: 14px;
            color: #555;
        }

        .role-badge {
            font-size: 0.85rem;
        }

        .search-area input {
            width: 100%;
        }

        .search-label {
            font-weight: 500;
        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar">
                <div class="d-grid gap-2 px-3">
                    <button class="btn" onclick="location.href='/Admin/AdminDashboard'">Thống Kê</button>
                    <button class="btn active-btn" onclick="activateButton(this)">Quản Lý Tài Khoản</button>
                    <button class="btn" onclick="activateButton(this)">Quản Lý Yêu Cầu</button>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 p-4">

                <!-- Search -->
                <form method="get" class="row mb-3 align-items-end">
                    <div class="col-md-8">
                        <label class="form-label search-label">Tìm bằng tên tài khoản</label>
                        <div class="input-group">
                            <input type="hidden" name="role" value="@(Model.CurrentRole)">
                            <!-- reset về page 1 khi tìm -->
                            <input type="hidden" name="pageNumber" value="1" />
                            <input type="text" name="accountName" class="form-control" placeholder="Nhập tên tài khoản..."
                                   value="@(Model.CurrentName)">
                            <button class="btn btn-outline-primary" type="submit">Tìm kiếm</button>
                        </div>
                    </div>
                </form>

                <!-- Filter -->
                <form method="get" id="roleFilterForm" class="d-flex gap-3">
                    <input type="hidden" name="accountName" value="@(Model.CurrentName)">
                    <!-- reset về page 1 khi đổi role -->
                    <input type="hidden" name="pageNumber" value="1" />

                    <input type="radio" class="btn-check" name="role" id="role-all" value="ALL"
                           onchange="submitRole()" @(Model.CurrentRole == "ALL" ? "checked" : "")>
                    <label class="btn btn-outline-dark" for="role-all">Tất Cả</label>

                    <input type="radio" class="btn-check" name="role" id="role-employer" value="EMPLOYER"
                           onchange="submitRole()" @(Model.CurrentRole == "EMPLOYER" ? "checked" : "")>
                    <label class="btn btn-outline-primary" for="role-employer">Nhà Tuyển Dụng</label>

                    <input type="radio" class="btn-check" name="role" id="role-candidate" value="CANDIDATE"
                           onchange="submitRole()" @(Model.CurrentRole == "CANDIDATE" ? "checked" : "")>
                    <label class="btn btn-outline-success" for="role-candidate">Ứng Viên</label>
                </form>

                <!-- Account Cards -->
                @foreach (var acc in Model.AccountList)
                {
                    <div class="account-card">
                        <div class="d-flex justify-content-between">
                            <small>@acc.CreatedDate.ToString("dd/MM/yyyy")</small>
                            <a class="btn btn-sm btn-outline-secondary" href="/Admin/ProfileOfUserForAdmin?accountId=@acc.AccountId">Chi tiết</a>
                        </div>
                        <h5 class="mt-2 mb-1">
                            @acc.FullName
                            @if (acc.RoleName == "EMPLOYER")
                            {
                                <span class="badge bg-info text-dark role-badge">Nhà Tuyển Dụng</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary role-badge">Ứng Viên</span>
                            }
                        </h5>
                        <p class="mb-1">@acc.Email</p>
                        <div class="account-info-inline">
                            <div>@acc.Address</div>
                        </div>
                    </div>
                }

                <!-- Pagination -->
                @{
                    // Tạo window trang gọn: tối đa 5 nút quanh trang hiện tại
                    var pageSize = 10; // hoặc bind từ query
                    var start = Math.Max(1, Model.PageNumber - 2);
                    var end = Math.Min(Model.TotalPages, Model.PageNumber + 2);
                    if (end - start < 4)
                    {
                        if (start == 1) end = Math.Min(Model.TotalPages, start + 4);
                        else if (end == Model.TotalPages) start = Math.Max(1, end - 4);
                    }

                    string PageHref(int page) =>
                    Url.Page(
                    pageName: null, // current page
                    values: new
                    {
                        role = Model.CurrentRole,
                        accountName = Model.CurrentName,
                        pageNumber = page,
                        pageSize = pageSize
                    }
                    ) ?? "#";
                }

                <nav aria-label="Pagination">
                    <ul class="pagination justify-content-center mt-4">

                        <li class="page-item @(Model.HasPrevious ? "" : "disabled")">
                            <a class="page-link" href="@(Model.HasPrevious? PageHref(Model.PageNumber - 1) : "#")">Prev</a>
                        </li>

                        @if (start > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@PageHref(1)">1</a>
                            </li>
                            @if (start > 2)
                            {
                                <li class="page-item disabled"><a class="page-link">…</a></li>
                            }
                        }

                        @for (var i = start; i <= end; i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" href="@PageHref(i)">@i</a>
                            </li>
                        }

                        @if (end < Model.TotalPages)
                        {
                            @if (end < Model.TotalPages - 1)
                            {
                                <li class="page-item disabled"><a class="page-link">…</a></li>
                            }
                            <li class="page-item">
                                <a class="page-link" href="@PageHref(Model.TotalPages)">@Model.TotalPages</a>
                            </li>
                        }

                        <li class="page-item @(Model.HasNext ? "" : "disabled")">
                            <a class="page-link" href="@(Model.HasNext? PageHref(Model.PageNumber + 1) : "#")">Next</a>
                        </li>
                    </ul>
                </nav>

            </div>
        </div>
    </div>

    <!-- JS Functions -->
    <script>
        function activateButton(clickedBtn) {
            document.querySelectorAll('.sidebar .btn').forEach(btn => {
                btn.classList.remove('active-btn');
            });
            clickedBtn.classList.add('active-btn');
        }

        function filterByRole(selectEl) {
            const role = selectEl.value;
            console.log("Filtering by role:", role);
        }

        function submitRole() {
            document.getElementById('roleFilterForm').submit();
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
