          // Implement logic here to filter cards by role
        }

         function submitRole() {
           document.getElementById('roleFilterForm').submit();
         }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>