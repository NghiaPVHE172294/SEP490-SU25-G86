@page
@model AdminCVTemplatesModel
@{
    ViewData["Title"] = "Quản lý Template CV";
}
<div class="container mt-4">
    <h2 class="mb-4">Quản lý Template CV</h2>
    <div class="mb-3">
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#uploadModal">
            <i class="bi bi-plus-circle"></i> Thêm Template mới
        </button>
    </div>
    <div class="table-responsive-cv">
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>ẢNH MINH HỌA</th>
                    <th>TÊN TEMPLATE</th>
                    <th>FILE PDF</th>
                    <th>FILE DOC/DOCX</th>
                    <th>NGÀY TẢI LÊN</th>
                    <th>GHI CHÚ</th>
                    <th>HÀNH ĐỘNG</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Templates != null && Model.Templates.Count > 0)
                {
                    foreach (var template in Model.Templates)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(template.ImgTemplate))
                                {
                                    <img src="@template.ImgTemplate" alt="Ảnh minh họa" style="max-width:80px;max-height:80px;object-fit:contain;" />
                                }
                                else { <span class="text-muted">Không có</span>; }
                            </td>
                            <td>@template.CvTemplateName</td>
                            <td>
                                <a href="https://docs.google.com/gview?url=@(Uri.EscapeDataString(template.PdfFileUrl))&embedded=true" target="_blank" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-file-earmark-pdf"></i> Xem PDF
                                </a>
                                <a href="@template.PdfFileUrl" target="_blank" class="btn btn-sm btn-secondary ms-1">
                                    <i class="bi bi-download"></i> Tải
                                </a>
                            </td>
                            <td>
                                <a href="https://docs.google.com/gview?url=@(Uri.EscapeDataString(template.DocFileUrl))&embedded=true" target="_blank" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-file-earmark-word"></i> Xem DOC
                                </a>
                                <a href="@template.DocFileUrl" target="_blank" class="btn btn-sm btn-secondary ms-1">
                                    <i class="bi bi-download"></i> Tải
                                </a>
                            </td>
                            <td>@template.UploadDate ?? ""</td>
                            <td>@(string.IsNullOrEmpty(template.Notes) ? "Không có" : template.Notes)</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editTemplateModal" data-id="@template.CvTemplateId">
                                        <i class="bi bi-pencil"></i> Sửa
                                    </button>
                                    <button type="button" class="btn btn-sm btn-danger ms-1 btn-delete-template" data-id="@template.CvTemplateId">
    <i class="bi bi-trash"></i> Xóa
</button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="7" class="text-center text-muted">Chưa có template nào</td></tr>
                }
            </tbody>
        </table>
    </div>
    <!-- Modal upload mới -->
    <div class="modal fade" id="uploadModal" tabindex="-1" aria-labelledby="uploadModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <form method="post" enctype="multipart/form-data" asp-page-handler="Upload">
                    <div class="modal-header">
                        <h5 class="modal-title" id="uploadModalLabel">Thêm Template CV mới</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Tên template</label>
                                <input type="text" name="CvTemplateName" class="form-control" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Ngành nghề</label>
                                <select name="IndustryId" class="form-select" required>
                                    <option value="">-- Chọn ngành --</option>
                                    @foreach (var industry in Model.Industries)
                                    {
                                        <option value="@industry.IndustryId">@industry.IndustryName</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Vị trí</label>
                                <select name="PositionId" class="form-select" required>
                                    <option value="">-- Chọn vị trí --</option>
                                    @foreach (var pos in Model.Positions)
                                    {
                                        <option value="@pos.PositionId">@pos.PositionName</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Ghi chú</label>
                                <input type="text" name="Notes" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">File PDF</label>
                                <input type="file" name="PdfFile" class="form-control" accept="application/pdf" required />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">File DOC/DOCX</label>
                                <input type="file" name="DocFile" class="form-control" accept=".doc,.docx,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document" required />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Ảnh minh họa</label>
                                <input type="file" name="PreviewImage" class="form-control" accept="image/png,image/jpeg" required />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary">Tải lên</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.btn-delete-template').forEach(function(btn) {
            btn.addEventListener('click', function() {
                var id = this.getAttribute('data-id');
                if (confirm('Bạn có chắc chắn muốn xóa template này?')) {
                    fetch(`/api/admin/cv-templates/${id}`, {
                        method: 'DELETE'
                    })
                    .then(res => {
                        if (res.ok) {
                            location.reload();
                        } else {
                            alert('Xóa không thành công!');
                        }
                    })
                    .catch(() => alert('Có lỗi khi xóa!'));
                }
            });
        });
    });
</script>
}
