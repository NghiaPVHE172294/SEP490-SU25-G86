@page
@model SEP490_SU25_G86_Client.Pages.Companies.CompanyInformationModel
@{
    ViewData["Title"] = "Thông tin công ty";
}

@if (Model.Company == null)
{
    <div class="container text-center mt-5">
        <h5 class="text-muted mb-3">Bạn chưa tạo công ty nào.</h5>
        <a class="btn btn-success btn-lg" asp-page="/Companies/CreateCompany">+ Tạo công ty</a>
    </div>
}
else
{
    <div class="container my-4">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-2">
                <h5 class="mb-0">Thông tin công ty</h5>
                <a asp-page="/Companies/UpdateCompany" class="btn btn-light btn-sm">Chỉnh sửa</a>
            </div>
            <div class="card-body row g-3">
                <div class="col-md-8">
                    <h4 class="fw-bold mb-3">@Model.Company.CompanyName</h4>

                    <div class="row mb-2">
                        <div class="col-5 text-muted">Ngành nghề:</div>
                        <div class="col-7">@Model.Company.IndustryName</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-5 text-muted">Mã số thuế:</div>
                        <div class="col-7">@Model.Company.TaxCode</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-5 text-muted">Email:</div>
                        <div class="col-7">@Model.Company.Email</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-5 text-muted">Số điện thoại:</div>
                        <div class="col-7">@Model.Company.Phone</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-5 text-muted">Địa chỉ:</div>
                        <div class="col-7">@Model.Company.Address</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-5 text-muted">Website:</div>
                        <div class="col-7">
                            <a href="@Model.Company.Website" target="_blank">@Model.Company.Website</a>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-5 text-muted">Quy mô:</div>
                        <div class="col-7">@Model.Company.CompanySize</div>
                    </div>

                    <div class="mt-3">
                        <div class="text-muted mb-1">Mô tả:</div>
                        <div class="text-body lh-lg">@Model.Company.Description</div>
                    </div>
                </div>

                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.Company.LogoUrl))
                    {
                        <img src="@Model.Company.LogoUrl" alt="Logo công ty" class="img-fluid rounded border" style="max-height: 140px;" />
                    }
                    else
                    {
                        <div class="text-muted">Chưa có logo</div>
                    }
                </div>
            </div>
        </div>
    </div>
}
