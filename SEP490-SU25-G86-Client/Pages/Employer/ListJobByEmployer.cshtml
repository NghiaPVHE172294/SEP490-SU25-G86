@page
@model SEP490_SU25_G86_Client.Pages.Employer.ListJobByEmployerModel
@{
    ViewData["Title"] = "List Job";
}
@if (TempData["ToastSuccess"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success">@ok</div>
}
@if (TempData["ToastWarning"] is string warn && !string.IsNullOrWhiteSpace(warn))
{
    <div class="alert alert-warning">@warn</div>
}
@if (TempData["ToastError"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger">@err</div>
}

<div class="container py-5">
    <header class="text-center mb-4">
        <h1 class="fw-bold text-primary border-bottom pb-3">Danh sách tin tuyển dụng</h1>
        <a href="/Employer/AddJobPost" class="btn btn-success mt-2 mb-4 px-4 py-2 fs-5 shadow-sm">+ Tạo tin tuyển dụng</a>
    </header>

    <!-- Bộ lọc trạng thái -->
    <form method="get" class="mb-4 row justify-content-center">
        <div class="col-md-4">
            <select name="StatusFilter" class="form-select" onchange="this.form.submit()">
                <option value="">-- Lọc theo trạng thái --</option>

                @if (Model.StatusFilter == "OPEN")
                {
                    <option value="OPEN" selected>Đang tuyển dụng</option>
                }
                else
                {
                    <option value="OPEN">Đang tuyển dụng</option>
                }

                @if (Model.StatusFilter == "CLOSED")
                {
                    <option value="CLOSED" selected>Đã đóng</option>
                }
                else
                {
                    <option value="CLOSED">Đã đóng</option>
                }
            </select>
        </div>
    </form>

    @if (Model.Jobs == null || !Model.Jobs.Any())
    {
        <div class="alert alert-info text-center">Bạn chưa có tin tuyển dụng nào.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered align-middle text-center shadow-sm">
                <thead class="table-primary">
                    <tr>
                        <th>Tiêu đề</th>
                        <th>Công ty</th>
                        <th>Địa điểm</th>
                        <th>Ngành Nghề</th>
                        <th>Cấp Bậc</th>
                        <th>Trình Độ</th>
                        <th>Lương</th>
                        <th>Ngày tạo</th>
                        <th>Hết hạn</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var job in Model.Jobs)
                    {
                        var statusText = job.Status switch
                        {
                            "OPEN" => "Đang tuyển dụng",
                            "CLOSED" => "Đã đóng",
                            _ => "Không xác định"
                        };

                        var badgeClass = job.Status switch
                        {
                            "OPEN" => "bg-success",
                            "CLOSED" => "bg-secondary",
                            _ => "bg-dark"
                        };

                        <tr>
                            <td>@job.Title</td>
                            <td>@job.CompanyName</td>
                            <td>@job.WorkLocation</td>
							<td>@job.Industry</td>
							<td>@job.JobLevel</td>
                            <td>@job.ExperienceLevel</td>
                            <td class="text-success fw-bold">@job.Salary</td>
                            <td>@(job.CreatedDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                            <td>@(job.EndDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                            <td>
                                <span class="badge @badgeClass px-3 py-2">@statusText</span>
                            </td>
                            <td class="d-flex flex-wrap justify-content-center gap-2">
                                <a class="btn btn-primary btn-sm" href="/Job/DetailJobPost/@job.JobPostId">Chi tiết</a>
                                <a class="btn btn-outline-secondary btn-sm" href="/Job/CvSubmissions?jobPostId=@job.JobPostId">Danh sách CV</a>
                                @if (job.Status != "CLOSED")
                                {
                                    <a class="btn btn-warning btn-sm" href="/Employer/UpdateJobPost?jobPostId=@job.JobPostId">Cập nhật</a>
                                }
                                <form method="post" asp-page-handler="Delete" class="d-inline"
                                      onsubmit="return confirm('Bạn chắc chắn muốn xóa: @job.Title ?');">
                                    <input type="hidden" name="id" value="@job.JobPostId" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Xóa
                                    </button>
                                    @Html.AntiForgeryToken()
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
