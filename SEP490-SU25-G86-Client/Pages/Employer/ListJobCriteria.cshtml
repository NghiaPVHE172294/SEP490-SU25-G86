@page
@model SEP490_SU25_G86_Client.Pages.Employer.ListJobCriteriaModel
@{
    ViewData["Title"] = "Chiến dịch tuyển dụng";
}
<link rel="stylesheet" href="~/css/jobcriteria.css">

<h2>Chiến dịch tuyển dụng của bạn</h2>

@if (Model.JobPosts == null || !Model.JobPosts.Any())
{
    <div class="alert alert-info">Bạn chưa có tin tuyển dụng nào.</div>
}
else
{
    int stt = 1;
    foreach (var job in Model.JobPosts)
    {
        <div class="mb-4">
            <h4 class="fw-bold">@job.Title</h4>
            @if (Model.CriteriaByJobPost.ContainsKey(job.JobPostId) && Model.CriteriaByJobPost[job.JobPostId].Any())
            {
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="stt-col text-center">STT</th>
                            <th style="min-width:120px">Kinh nghiệm yêu cầu</th>
                            <th style="min-width:120px">Kỹ năng yêu cầu</th>
                            <th style="min-width:120px">Trình độ học vấn</th>
                            <th style="min-width:120px">Vị trí công việc yêu cầu</th>
                            <th style="min-width:120px">Ngôn ngữ ưu tiên</th>
                            <th style="min-width:120px">Chứng chỉ ưu tiên</th>
                            <th style="min-width:120px">Địa chỉ</th>
                            <th style="min-width:120px">Tóm tắt</th>
                            <th class="text-nowrap" style="min-width:160px">Lịch sử công việc</th>
                            <th style="min-width:120px">Dự án</th>
                            <th style="min-width:120px">Khả năng nhận việc</th>
                            <th style="min-width:120px">Mức lương mong muốn</th>
                            <th style="min-width:100px">Ngày tạo</th>
                            <th style="min-width:100px">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                    @for (int i = 0; i < Model.CriteriaByJobPost[job.JobPostId].Count; i++)
                    {
                        var item = Model.CriteriaByJobPost[job.JobPostId][i];
                        <tr>
                            <td class="stt-col text-center">@stt</td>
                            <td>@item.RequiredExperience</td>
                            <td>@item.RequiredSkills</td>
                            <td>@item.EducationLevel</td>
                            <td>@item.RequiredJobTitles</td>
                            <td>@item.PreferredLanguages</td>
                            <td>@item.PreferredCertifications</td>
                            <td>@item.Address</td>
                            <td>@item.Summary</td>
                            <td class="work-history-cell">@Html.Raw(item.WorkHistory?.Replace("\n", "<br/>") ?? "")</td>
                            <td>@item.Projects</td>
                            <td>@item.Availability</td>
                            <td>@item.SalaryExpectation</td>
                            <td>@item.CreatedAt?.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a class="btn btn-warning btn-sm" href="/Employer/UpdateJobCriterion?id=@item.JobCriteriaId">Update</a>
                            </td>
                        </tr>
                        stt++;
                    }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-secondary d-flex justify-content-between align-items-center">
                    <span>Chưa có tiêu chí tuyển dụng cho tin này.</span>
                    <a class="btn btn-primary btn-sm" href="/Employer/AddJobCriteria?jobPostId=@job.JobPostId">Thêm tiêu chí tuyển dụng</a>
                </div>
            }
        </div>
    }
}
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>