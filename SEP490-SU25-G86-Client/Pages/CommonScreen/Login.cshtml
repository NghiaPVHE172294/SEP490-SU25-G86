@page  
@model SEP490_SU25_G86_Client.Pages.CommonScreen.LoginModel  
@{  
   Layout = null;  
}  

<!DOCTYPE html>  
<html lang="vi">  
<head>  
   <meta charset="UTF-8">  
   <meta name="viewport" content="width=device-width, initial-scale=1.0">  
   <title>Đăng nhập - CVMatcher</title>  
   <link rel="stylesheet" href="~/css/style.css">  
   <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">  
</head>  
<body>  
   <div class="login-container">  
       <!-- Phần trái -->  
       <div class="left-section">  
           <img src="assets/images/logo.png" alt="CVMatcher" class="logo">  
           <img src="assets/images/handshake.png" alt="Handshake Illustration" class="handshake">  
           <p class="message"></p>  
       </div>  

       <!-- Phần phải -->  
       <div class="right-section">  
           <a href="/" class="homepage-link">  
               <img src="assets/images/chevron-left.svg" alt="Chevron Left" class="chevron-icon">  
               Homepage  
           </a>
            <a href="/CommonScreen/register" class="register-link">Bạn chưa có tài khoản? <span>ĐĂNG KÝ</span></a>

            <div class="form-container">  
               <h2 class="title">Chào mừng bạn đã quay trở lại</h2>  
               <p class="subtitle">Cùng khám phá những cơ hội việc làm phù hợp nhất dành cho bạn</p>  

               <form class="login-form">  
                   <div class="input-group">  
                       <img src="assets/images/icon-mail.svg" alt="Email Icon" class="input-icon">  
                       <input type="email" placeholder="Email" required>  
                   </div>  
                   <div class="input-group">  
                       <img src="assets/images/icon-lock.svg" alt="Lock Icon" class="input-icon">  
                       <input type="password" placeholder="Mật khẩu" id="password" required>  
                       <span class="toggle-password">SHOW</span>  
                   </div>  
                   <a href="/forgot-password" class="forgot-password">Quên mật khẩu?</a>  
                   <button type="submit" class="login-button">  
                       Đăng nhập  
                       <img src="assets/images/arrow-right.svg" alt="Arrow Right" class="arrow-icon">  
                   </button>  
               </form>  

               <div class="divider">OR USE</div>  
               <div class="social-buttons">  
                   <button class="social-button">  
                       <img src="assets/images/icon-google.svg" alt="Google Icon">  
                   </button>  
                   <button class="social-button">  
                       <img src="assets/images/icon-facebook.svg" alt="Facebook Icon">  
                   </button>  
               </div>  
           </div>  
       </div>  
   </div>  

   <script>  
       // Toggle hiển thị mật khẩu  
       document.querySelector('.toggle-password').addEventListener('click', function() {  
           const passwordInput = document.getElementById('password');  
           this.textContent = this.textContent === 'SHOW' ? 'HIDE' : 'SHOW';  
           passwordInput.type = passwordInput.type === 'password' ? 'text' : 'password';  
       });  
   </script>  
</body>  
</html>