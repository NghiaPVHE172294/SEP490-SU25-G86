@page
@model SEP490_SU25_G86_Client.Pages.Common.ForgotPasswordModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - CVMatcher</title>
    <style>
            body {
                font-family: Arial, sans-serif;
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
                margin: 0;
                background: linear-gradient(to right, #e0f7f9, #b2dfdb);
            }
            .container {
                display: flex;
                width: 80%;
                max-width: 800px;
            }
            .left-panel {
                flex: 1;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                color: #00695c;
            }
            .left-panel h1 {
                font-size: 2.5em;
                margin: 0;
            }
            .left-panel p {
                font-size: 1.2em;
                text-align: center;
                margin: 10px 0;
            }
            .right-panel {
                flex: 1;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                background: #fff;
                padding: 20px;
                border-radius: 10px;
                box-shadow: 0 0 10px rgba(0,0,0,0.1);
            }
            .right-panel h2 {
                color: #00695c;
                margin-bottom: 20px;
            }
            .right-panel input {
                width: 100%;
                padding: 10px;
        margin-bottom: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }
            .right-panel button {
                width: 100%;
                padding: 10px;
                background-color: #00695c;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }
            .right-panel button:hover {
                background-color: #004d40;
            }
            .right-panel a {
                color: #00695c;
                text-decoration: none;
                margin-top: 10px;
                display: block;
                text-align: center;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="left-panel">
            <h1>CVMatcher</h1>
            <img src="https://via.placeholder.com/200x300" alt="Handshake" style="max-width: 200px;">
            <p>Chúng tôi rất vui được<br>đồng hành cùng bạn trên<br>con đường sự nghiệp</p>
            <a href="/homepage" style="color: #757575;">Homepage</a>
        </div>
        <div class="right-panel">
            <h2>Quên mật khẩu</h2>
            <input type="email" placeholder="Email" required>
            <button>Tạo lại mật khẩu <span>➡️</span></button>
            <a href="/login">Quay lại đăng nhập</a>
            <a href="/register">Đăng ký tài khoản mới</a>
        </div>
    </div>
</body>
</html>